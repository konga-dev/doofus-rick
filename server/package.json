    "@elysiajs/swagger": "^1.3.1",
    "@prisma/client": "^6.6.0",
    "better-auth": "^1.3.27",
    "bun-types": "^1.1.1",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "elysia": "^1.4.6",
    "log4js": "^6.9.1",
